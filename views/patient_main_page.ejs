<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | <%= f_name %></title>
    <link rel="stylesheet" href="/CSS/patient_main_page.css">
</head>
<body>
    <!-- Top fixed header -->
    <header class="header">
        <div class="header-left">
            <a href="/" class="logo">üè• CAM</a>
        </div>
        <div class="auth-buttons">
            <span class="welcome-message">Welcome, <strong><%= f_name %></strong></span>
            <a href="/logout" class="auth-button logout">Logout</a>
        </div>
    </header>

    <main class="dashboard-container">
        <!-- Page heading -->
        <header class="page-header">
            <h1>Patient Dashboard</h1>
            <p>Manage your appointments and view doctor information.</p>
        </header>

        <!-- 3-column layout: Upcoming | Directory | Booking -->
        <div class="dashboard-grid-3col">
            <!-- Column 1: Upcoming Appointments -->
            <section class="dashboard-panel">
                <h2>Upcoming Appointments</h2>

                <% if (appointments && appointments.length > 0) { %>
                    <% appointments.forEach(app => { %>
                        <div class="appointment-details-table">
                            <div class="table-row">
                                <div class="table-cell label">With</div>
                                <div class="table-cell value">
                                    <%= app.doctor_name %> (ID: <%= app.doctor_id %>)
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell label">Time</div>
                                <div class="table-cell value">
                                    <%= new Date(app.appointment_time)
                                        .toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short', hour12: false }) %>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell label">Specialization</div>
                                <div class="table-cell value"><%= app.specialization %></div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>You have no upcoming appointments.</p>
                <% } %>
            </section>

            <!-- Column 2: Doctor Directory -->
            <section class="dashboard-panel">
                <h2>Doctor Directory</h2>

                <% if (doctors && doctors.length > 0) { %>
                    <div class="doctor-directory-list-sm">
                        <% doctors.forEach(doc => { %>
                            <div class="doctor-info-card-sm">
                                <div class="doctor-avatar-sm"></div>
                                <div class="doctor-card-content">
                                    <h3><%= doc.full_name %> (<%= doc.doctor_id %>)</h3>
                                    <p><%= doc.specialization %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>No doctors available.</p>
                <% } %>
            </section>

            <!-- Column 3: Booking Form -->
            <section class="dashboard-panel">
                <h2>Book a New Appointment</h2>

                <form class="booking-form" action="/book-appointment" method="POST">
                    <div class="form-group">
                        <label for="doctor_id">Doctor ID</label>
                        <input type="number" id="doctor_id" name="doctor_id" placeholder="e.g., 1" required>
                    </div>

                    <div class="form-group">
                        <label for="appointment_date">Select Date</label>
                        <input type="date" id="appointment_date" name="appointment_date" required>
                    </div>

                    <div class="form-group">
                        <label for="appointment_time">Select Time (24-hour format)</label>
                        <input type="time" id="appointment_time" name="appointment_time" required>
                    </div>

                    <div class="page-actions">
                        <button type="submit" class="continue-btn">Book Now</button>
                    </div>
                </form>
            </section>
        </div>
    </main>

    <footer class="footer">
        <p>&copy; <%= new Date().getFullYear() %> Clinic Appointment Manager</p>
        <p class="contact-info">For support, contact your clinic administration.</p>
    </footer>
</body>
</html>
